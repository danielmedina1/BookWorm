<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.adminEmpresas.AdminEmpresasFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView9"
        android:name="es.riberadeltajo.bookwormv2.recyclerviews.empresas.EmpresasFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/añadirEmpresa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buscarEmpresa" />

    <Button
        android:id="@+id/añadirEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Añadir Empresa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/buscarEmpresa"
        android:layout_width="365dp"
        android:layout_height="81dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border_background"
        android:backgroundTintMode="src_atop"
        android:breakStrategy="simple"
        android:drawableTint="@color/black"
        android:drawableTintMode="src_in"
        android:ems="10"
        android:hint="Buscar empresa..."
        android:inputType="text"
        android:paddingLeft="30dp"
        android:rotation="3"
        android:rotationX="-6"
        android:rotationY="5"
        android:shadowColor="@color/black"
        android:singleLine="false"
        android:textColor="@color/impred"
        android:textColorHint="@color/impred"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>