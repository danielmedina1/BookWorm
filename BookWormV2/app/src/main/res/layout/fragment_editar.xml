<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jet"
    tools:context=".empresa.editar.EditarFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/usoActual"
                android:layout_width="363dp"
                android:layout_height="73dp"
                android:background="@drawable/border"
                android:paddingLeft="5dp"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationX="-10"
                android:text="Añadir Libro"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/labelPrecio"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationY="16"
                android:text="Precio"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelISBN" />

            <EditText
                android:id="@+id/precioLibroN"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_background"
                android:ems="10"
                android:hint="Precio..."
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:rotationY="-12"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textColorHint="@color/impred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/labelPrecio"
                app:layout_constraintTop_toBottomOf="@+id/ISBNLibroN" />

            <TextView
                android:id="@+id/labelISBN"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:background="@drawable/border"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationY="16"
                android:text="ISBN"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/autorLibroN" />

            <TextView
                android:id="@+id/labelStock"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationY="16"
                android:text="Stock"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelPrecio" />

            <EditText
                android:id="@+id/stockLibroN"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_background"
                android:ems="10"
                android:hint="Stock..."
                android:inputType="number"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:rotationY="-12"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textColorHint="@color/impred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/labelStock"
                app:layout_constraintTop_toBottomOf="@+id/precioLibroN" />

            <EditText
                android:id="@+id/ISBNLibroN"
                android:layout_width="152dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_background"
                android:ems="10"
                android:hint="ISBN..."
                android:inputType="number"
                android:maxLength="13"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:rotationY="-12"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textColorHint="@color/impred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/labelISBN"
                app:layout_constraintTop_toTopOf="@+id/labelISBN" />

            <EditText
                android:id="@+id/sinopsisLibroN"
                android:layout_width="387dp"
                android:layout_height="82dp"
                android:background="@drawable/border_background"
                android:ems="10"
                android:hint="Sinopsis..."
                android:inputType="text"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:rotationY="-12"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textColorHint="@color/impred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelSinopsis" />

            <TextView
                android:id="@+id/labelSinopsis"
                android:layout_width="187dp"
                android:layout_height="71dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationY="16"
                android:text="Sinopsis"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelStock" />

            <TextView
                android:id="@+id/labelTitulo"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:background="@drawable/border"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationY="16"
                android:text="Titulo"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usoActual" />

            <EditText
                android:id="@+id/tituloLibroN"
                android:layout_width="387dp"
                android:layout_height="82dp"
                android:background="@drawable/border_background"
                android:ems="10"
                android:hint="Titulo..."
                android:inputType="text"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:rotationY="-12"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textColorHint="@color/impred"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelTitulo" />

            <EditText
                android:id="@+id/autorLibroN"
                android:layout_width="387dp"
                android:layout_height="82dp"
                android:background="@drawable/border_background"
                android:ems="10"
                android:hint="Autor..."
                android:inputType="text"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:rotationY="-12"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textColorHint="@color/impred"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelAutor" />

            <TextView
                android:id="@+id/labelAutor"
                android:layout_width="150dp"
                android:layout_height="67dp"
                android:background="@drawable/border"
                android:paddingTop="9dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:rotationY="16"
                android:text="Autor"
                android:textAlignment="center"
                android:textColor="@color/impred"
                android:textSize="34sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.068"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituloLibroN" />

            <Button
                android:id="@+id/botonAccionEditar"
                android:layout_width="385dp"
                android:layout_height="63dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:rotationX="10"
                android:text="Añadir Libro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinopsisLibroN" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>