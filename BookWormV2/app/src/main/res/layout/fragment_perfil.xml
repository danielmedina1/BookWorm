<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jet"
    tools:context=".usuario.perfil.PerfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jet"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/perfilTitulo"
            android:layout_width="412dp"
            android:layout_height="76dp"
            android:background="@drawable/border"
            android:paddingTop="12dp"
            android:rotationX="-8"
            android:text="Nombre de Usuario"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="170dp"
            android:layout_height="68dp"
            android:background="@drawable/border"
            android:paddingTop="20dp"
            android:rotation="8"
            android:rotationX="-25"
            android:rotationY="-10"
            android:text="Seguidos"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilTitulo"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/perfilSeguidores"
            android:layout_width="149dp"
            android:layout_height="93dp"
            android:background="@drawable/border_background"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            android:rotation="4"
            android:rotationX="7"
            android:rotationY="19"
            android:text="1234"
            android:textAlignment="center"
            android:textColor="@color/impred"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/cambiarInformacion"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="170dp"
            android:layout_height="68dp"
            android:background="@drawable/border"
            android:paddingTop="20dp"
            android:rotation="-8"
            android:rotationX="-25"
            android:rotationY="10"
            android:text="Seguidores"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilTitulo"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/perfilSeguidos"
            android:layout_width="149dp"
            android:layout_height="93dp"
            android:background="@drawable/border_background"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            android:rotation="-4"
            android:rotationX="7"
            android:rotationY="-19"
            android:text="1234"
            android:textAlignment="center"
            android:textColor="@color/impred"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/cambiarInformacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/cambiarInformacion"
            android:layout_width="306dp"
            android:layout_height="57dp"
            android:layout_marginTop="224dp"
            android:rotationX="8"
            android:text="Cambiar Información"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfilTitulo" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="405dp"
            android:layout_height="72dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/border"
            android:paddingTop="10dp"
            android:rotationX="-8"
            android:text="Reseñas realizadas"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cambiarInformacion" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView5"
            android:name="es.riberadeltajo.bookwormv2.recyclerviews.reviews.ReseñasFragment"
            android:layout_width="418dp"
            android:layout_height="312dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.857"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.092" />

        <Button
            android:id="@+id/cerrarSesion"
            android:layout_width="366dp"
            android:layout_height="55dp"
            android:rotationX="8"
            android:text="Cerrar Sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentContainerView5"
            app:layout_constraintVertical_bias="0.157" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>